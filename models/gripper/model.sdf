<?xml version="1.0"?>
<sdf version="1.6">
  <model name="simple_gripper">
    <static>false</static>

    <!-- Base del gripper -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.1 0.1 0.02</size>
          </box>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.1 0.1 0.02</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- Dedo izquierdo -->
    <link name="left_finger">
      <pose>-0.03 0 0.04 0 0 0</pose>
      <collision name="left_collision">
        <geometry>
          <box>
            <size>0.02 0.02 0.08</size>
          </box>
        </geometry>
      </collision>
      <visual name="left_visual">
        <geometry>
          <box>
            <size>0.02 0.02 0.08</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- Dedo derecho -->
    <link name="right_finger">
      <pose>0.03 0 0.04 0 0 0</pose>
      <collision name="right_collision">
        <geometry>
          <box>
            <size>0.02 0.02 0.08</size>
          </box>
        </geometry>
      </collision>
      <visual name="right_visual">
        <geometry>
          <box>
            <size>0.02 0.02 0.08</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- ArticulaciÃ³n dedo izquierdo -->
    <joint name="left_joint" type="prismatic">
      <parent>base_link</parent>
      <child>left_finger</child>
      <axis>
        <xyz>1 0 0</xyz>
        <limit>
          <lower>-0.02</lower>
          <upper>0.0</upper>
        </limit>
      </axis>
    </joint>

    <!-- ArticulaciÃ³n dedo derecho -->
    <joint name="right_joint" type="prismatic">
      <parent>base_link</parent>
      <child>right_finger</child>
      <axis>
        <xyz>-1 0 0</xyz>
        <limit>
          <lower>-0.02</lower>
          <upper>0.0</upper>
        </limit>
      </axis>
    </joint>

  </model>
</sdf>
